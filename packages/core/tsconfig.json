{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true
  },
  "include": ["llm/**/*.ts", "knowledge/**/*.ts", "agent/**/*.ts", "types/**/*.ts", "extensions/**/*.ts", "representative/**/*.ts", "forms/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
