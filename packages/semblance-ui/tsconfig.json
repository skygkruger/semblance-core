{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "moduleSuffixes": [".web", ""]
  },
  "include": ["global.d.ts", "tokens/**/*.ts", "components/**/*.ts", "components/**/*.tsx", "pages/**/*.ts", "pages/**/*.tsx", "hooks/**/*.ts", "stories/**/*.tsx", "index.ts"],
  "exclude": ["node_modules", "dist", "**/*.stories.tsx", "**/*.native.tsx"]
}
