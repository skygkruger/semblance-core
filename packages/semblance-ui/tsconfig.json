{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "composite": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["tokens/**/*.ts", "components/**/*.ts", "components/**/*.tsx", "hooks/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
