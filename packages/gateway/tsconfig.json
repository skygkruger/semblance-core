{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "baseUrl": "..",
    "paths": {
      "@semblance/core": ["core/index.ts"],
      "@semblance/core/*": ["core/*"]
    }
  },
  "include": ["ipc/**/*.ts", "services/**/*.ts", "security/**/*.ts", "audit/**/*.ts", "monitor/**/*.ts", "credentials/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
