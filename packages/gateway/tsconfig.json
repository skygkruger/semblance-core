{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true
  },
  "include": ["ipc/**/*.ts", "services/**/*.ts", "security/**/*.ts", "audit/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
