<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Sandbox (required for Mac App Store, recommended for notarized apps) -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- Network: Gateway needs outbound for email, calendar, web search -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Files: User-selected files for knowledge graph indexing -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Files: Downloads folder for model downloads -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>

    <!-- Contacts: Contact ingestion (Step 14) -->
    <key>com.apple.security.personal-information.contacts</key>
    <true/>

    <!-- Location: Location-aware features (Step 16) -->
    <key>com.apple.security.personal-information.location</key>
    <true/>
</dict>
</plist>
