{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "Semblance",
  "version": "0.1.0",
  "identifier": "run.semblance.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Semblance",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: tauri:; font-src 'self' asset: tauri:; connect-src 'self' tauri: ipc:; frame-src 'none'; object-src 'none'; base-uri 'self'"
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "tooltip": "Semblance â€” Local Only"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "copyright": "\u00a9 2026 Veridian Synthetics",
    "shortDescription": "Your Intelligence. Your Device. Your Rules.",
    "longDescription": "Semblance is a fully local, self-hosted personal AI that ingests your emails, files, calendar, messages, and more into a local knowledge graph. It reasons about your life using locally-running language models and acts as your agent in the world. Your data never leaves your device.",
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "13.0",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 },
        "background": "dmg-background.png"
      },
      "signingIdentity": "-"
    },
    "windows": {
      "certificateThumbprint": null,
      "wix": {
        "language": "en-US",
        "bannerPath": "installer/windows-banner.bmp",
        "dialogImagePath": "installer/windows-dialog.bmp"
      }
    },
    "linux": {
      "deb": {
        "section": "utils",
        "depends": ["libwebkit2gtk-4.1-0", "libappindicator3-1"]
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/skygkruger/semblance-core/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI3QzRFOTBBNTE1MkI1NDEKUldSQnRWSlJDdW5FSjM0U1pDaU12Ynh2dGxjQUFsMk1WMEhIUm9nckZydjV3R0ZrVG1OMVFuYngK"
    }
  }
}
