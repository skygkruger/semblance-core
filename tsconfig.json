{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@semblance/core/*": ["./packages/core/*"],
      "@semblance/gateway/*": ["./packages/gateway/*"],
      "@semblance/ui/*": ["./packages/semblance-ui/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "packages/desktop",
    "packages/mobile"
  ]
}
