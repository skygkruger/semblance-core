{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "moduleSuffixes": [".web", ""],
    "paths": {
      "@semblance/core": ["./packages/core/index.ts"],
      "@semblance/core/*": ["./packages/core/*"],
      "@semblance/gateway": ["./packages/gateway/index.ts"],
      "@semblance/gateway/*": ["./packages/gateway/*"],
      "@semblance/ui": ["./packages/semblance-ui/index.ts"],
      "@semblance/ui/*": ["./packages/semblance-ui/*"],
      "@semblance/desktop/*": ["./packages/desktop/src/*"],
      "@semblance/mobile/*": ["./packages/mobile/src/*"],
      "react-router-dom": ["./packages/desktop/node_modules/react-router-dom"],
      "i18next": ["./packages/desktop/node_modules/i18next"],
      "react-i18next": ["./packages/desktop/node_modules/react-i18next"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "packages/desktop",
    "packages/mobile",
    "infrastructure",
    "**/*.stories.tsx",
    "**/*.native.tsx",
    "**/.storybook"
  ]
}
